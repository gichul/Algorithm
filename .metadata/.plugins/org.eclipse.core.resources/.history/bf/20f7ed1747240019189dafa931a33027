package Day13;

public class Kakaocode5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Soulution AN=new Soulution();
		System.out.println(AN.solution(5));

	}

}

class Soulution {
	  public int solution(int n) {
	      int answer = 0;
	      int count=0;
	      long[] facto=new long[60001];
	      facto[0]=1;
	      facto[1]=1;
	      for(int i=2;i<=60000;i++){
	          facto[i]=facto[i-1]*i;
	      }
	      for(int i=n; i>=0; i=i-2) {
	    	  for(int j=0;j<=n;j++) {
	    		count+=(int)(facto[i+j]/facto[i]/facto[j]%1000000007);
	    	  }
	      }
	      answer=count;
	      
	      
	      return answer;
	  }
	}